<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.priya.cardsmaterialdesign" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".AddReminder" />
        <activity android:name=".AddExtraReminder" />
        <activity
            android:name=".PopupReminder"
            android:theme="@style/DialogNoTitleBar" >
            <intent-filter>
                <action android:name="com.example.priya.cardsmaterialdesign.popupreminder" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <receiver
            android:name=".Alarm"
            android:process=":remote" />

        <activity
            android:name=".GoogleAccountPicker"
            android:label="@string/title_activity_google_account_picker" >
        </activity>
    </application>

</manifest>
